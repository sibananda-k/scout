<h1>Edit Profile</h1>

<%= form_for @user, url: profile_path, method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :timezone, "Timezone" %>
  <%= f.select :timezone, ActiveSupport::TimeZone.all.collect { |zone| ["UTC #{zone.formatted_offset} #{zone.name}", "UTC #{zone.formatted_offset} #{zone.name}"] }, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Profile' %>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path %>
